@using PanelMasterMVC5Separate.Localization
<div>
    <form name="userCreateOrEditForm" role="form" novalidate class="form-validation">
        <div class="modal-header">
            <h4 class="modal-title">
                <span ng-if="!vm.insurerId">@L("AddMasterInsurer")</span>
                <span ng-if="vm.insurerId">@L("EditMasterInsurer") </span>
            </h4>
        </div>
        <div class="modal-body">
            <uib-tabset class="tab-container tabbable-line">
                <uib-tab heading="@L("InsurerProperties")">
                    <div class="form-group form-md-line-input form-md-floating-label no-hint">
                        <label>@L("Country")</label>
                        <select ng-model="vm.job.countryID" class="form-control" ng-options="opt.id as opt.name for opt in countryList" required>
                            <option value="">@L("SelectOne")</option>
                        </select>
                    </div>
                    <div class="form-group form-md-line-input form-md-floating-label no-hint">
                        <label>@L("InsurerName")</label>
                        <input ng-model="vm.job.insurerName" name="InsurerName" class="form-control" type="text"/>
                    </div>
                    <div class="form-group form-md-line-input form-md-floating-label no-hint"  ng-if="vm.insurerId">
                        <label>@L("Logo")</label>
                        <img ng-if="vm.insurerId" ng-src="@Url.Action("GetProfilePictureById","Insurer")?id={{vm.insurerId}}" class="img-thumbnail" />
                        <img ng-if="!vm.insurerId" src="@Url.Content("~/Common/Images/default-profile-picture.png")" class="img-thumbnail img-rounded user-edit-dialog-profile-image" />
                        <input type="hidden" ng-model="vm.job.logoPicture" />
                    </div>
                    <div class="form-group form-md-line-input form-md-floating-label no-hint">
                        <label>@L("Logo")</label>
                        <input type="file" nv-file-select uploader="vm.uploader" />                  
                    </div>
                    <div class="form-group form-md-line-input form-md-floating-label no-hint">
                        <label>@L("Mask")</label>
                        <input ng-model="vm.job.mask" name="mask" class="form-control" type="text" />
                    </div>
                </uib-tab>                 
            </uib-tabset>
        </div>
        <div class="modal-footer">
            <button ng-disabled="vm.saving" type="button" class="btn btn-default" ng-click="vm.cancel()">@L("Cancel")</button>
            <button type="submit" button-busy="vm.saving" busy-text="@L("SavingWithThreeDot")" class="btn btn-primary blue" ng-click="vm.save()" ng-disabled="userCreateOrEditForm.$invalid"><i class="fa fa-save"></i> <span>@L("Save")</span></button>
        </div>
    </form>
</div>
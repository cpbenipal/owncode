@using PanelMasterMVC5Separate.Tenants.Vendors
<div class="row margin-bottom-5">
    <div class="col-xs-6">
        <div class="page-head">
            <div class="page-title">
                <h1>
                    <span>@L("AddVendor")</span> <small>more info about vendor</small>
                </h1>
            </div>
        </div>
    </div>
    <form name="addvendorform" ng-controller="tenant.views.AddVendor.index as vm" role="form" novalidate class="form-horizontal" action="#" id="submit_form" method="POST">

        <div class="row">
            <div class="col-md-12">
                <!-- BEGIN SAMPLE FORM PORTLET-->
                <div class="portlet light bordered">

                    <div class="tabbable-line boxless tabbable-reversed">
                        <div class="tab-content">
                           
                            <div class="portlet box green">
                                <div class="portlet-title">
                                    <div class="caption">
                                        <i class="fa fa-gift"></i>Fill vendor detail
                                    </div>
                                    <div class="tools">
                                        <a href="javascript:;" class="collapse"> </a>
                                        <a href="#portlet-config" data-toggle="modal" class="config"> </a>
                                        <a href="javascript:;" class="reload"> </a>
                                        <a href="javascript:;" class="remove"> </a>
                                    </div>
                                </div>
                                <div class="portlet-body form">
                                    <!-- BEGIN FORM-->

                                    <div class="form-body">
                                        <div class="form-group">
                                            <div class="alert alert-danger display-hide">
                                                <button class="close" data-close="alert"></button> You have some form errors. Please check below.
                                            </div>
                                            <div class="alert alert-success display-hide">
                                                <button class="close" data-close="alert"></button> Your form validation is successful!
                                            </div>
                                            <label class="col-md-3 control-label">Supplier Name</label>
                                            <div class="col-md-4">
                                                <div class="input-group">
                                                    <span class="input-group-addon input-circle-left">
                                                        <i class="fa fa-pencil"></i>
                                                    </span>
                                                    <input required type="text" data-required="1" ng-model="vm.job.SupplierName" class="form-control input-circle-right" placeholder="Supplier Name">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Contact Name</label>
                                            <div class="col-md-4">
                                                <div class="input-group">
                                                    <span class="input-group-addon input-circle-left">
                                                        <i class="fa fa-pencil"></i>
                                                    </span>
                                                    <input type="text" required ng-model="vm.job.ContactName" class="form-control input-circle-right" placeholder="Contact Name">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Contact Phone</label>
                                            <div class="col-md-4">
                                                <div class="input-group">
                                                    <span class="input-group-addon input-circle-left">
                                                        <i class="fa fa-phone"></i>
                                                    </span>
                                                    <input required type="text" ng-model="vm.job.ContactPhone" placeholder="Contact Phone" class="form-control input-circle-right">

                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Contact Fax</label>
                                            <div class="col-md-4">
                                                <div class="input-group">
                                                    <span class="input-group-addon input-circle-left">
                                                        <i class="fa fa-fax"></i>
                                                    </span>
                                                    <input required type="text" ng-model="vm.job.ContactFax" class="form-control input-circle-right" placeholder="Contact Fax">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Contact Email
                                                <span class="required"> * </span>
                                            </label>
                                            <div class="col-md-4">
                                                <div class="input-group">
                                                    <span class="input-group-addon input-circle-left">
                                                        <i class="fa fa-envelope"></i>
                                                    </span>
                                                    <input type="text" required name="email" ng-model="vm.job.ContactEmail" class="form-control input-circle-right" placeholder="Contact Email">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Address 1</label>
                                            <div class="col-md-4">
                                                <div class="input-group">
                                                    <span class="input-group-addon input-circle-left">
                                                        <i class="fa fa-address"></i>
                                                    </span>
                                                    <textarea required ng-model="vm.job.Address1" class="form-control input-circle-right" rows="3"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Address 2</label>
                                            <div class="col-md-4">
                                                <div class="input-group">
                                                    <span class="input-group-addon input-circle-left">
                                                        <i class="fa fa-address"></i>
                                                    </span>
                                                    <textarea ng-model="vm.job.Address2" class="form-control input-circle-right" rows="3"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Address 3</label>
                                            <div class="col-md-4">
                                                <div class="input-group">
                                                    <span class="input-group-addon input-circle-left">
                                                        <i class="fa fa-address"></i>
                                                    </span>
                                                    <textarea ng-model="vm.job.Address3" class="form-control input-circle-right" rows="3"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Location</label>
                                            <div class="col-md-4">
                                                <div class="input-group">
                                                    <span class="input-group-addon input-circle-left">
                                                        <i class="fa fa-location-arrow"></i>
                                                    </span>
                                                    <input required type="text" ng-model="vm.job.Location" class="form-control input-circle-right" placeholder="Location">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Registration Number</label>
                                            <div class="col-md-4">
                                                <div class="input-group">
                                                    <span class="input-group-addon input-circle-left">
                                                        <i class="fa fa-registered"></i>
                                                    </span>
                                                    <input required type="text" ng-model="vm.job.RegistrationNumber" class="form-control input-circle-right" placeholder="Registration">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Tax Registration Number</label>
                                            <div class="col-md-4">
                                                <div class="input-group">
                                                    <span class="input-group-addon input-circle-left">
                                                        <i class="fa fa-registered"></i>
                                                    </span>
                                                    <input required type="text" ng-model="vm.job.TaxRegistrationNumber" class="form-control input-circle-right" placeholder="Tax Registration">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Supplier Account</label>
                                            <div class="col-md-4">
                                                <div class="input-group">
                                                    <span class="input-group-addon input-circle-left">
                                                        <i class="fa fa-bank"></i>
                                                    </span>
                                                    <input required type="text" ng-model="vm.job.SupplierAccount" class="form-control input-circle-right" placeholder="Supplier Account">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Payment Terms</label>
                                            <div class="col-md-4">
                                                <div class="input-group">
                                                    <span class="input-group-addon input-circle-left">
                                                        <i class="fa fa-copy"></i>
                                                    </span>
                                                    <select required class="form-control input-circle-right" ng-model="vm.job.PaymentTerms"
                                                            ng-options="opt.id as opt.name for opt in SimpleData">
                                                        <option value="">--Select One--</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Bank</label>
                                            <div class="col-md-4">
                                                <div class="input-group">
                                                    <span class="input-group-addon input-circle-left">
                                                        <i class="fa fa-bank"></i>
                                                    </span>
                                                    <select required class="form-control input-circle-right" ng-model="vm.job.BankId"
                                                            ng-options="opt.id as opt.name for opt in bankList">
                                                        <option value="">--Select One--</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Account No.</label>
                                            <div class="col-md-4">
                                                <div class="input-group">
                                                    <span class="input-group-addon input-circle-left">
                                                        <i class="fa fa-bank"></i>
                                                    </span>
                                                    <input required type="text" ng-model="vm.job.AccountNumber" class="form-control input-circle-right" placeholder="Account Number">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Type</label>
                                            <div class="col-md-4">
                                                <div class="input-group">
                                                    <span class="input-group-addon input-circle-left">
                                                        <i class="fa fa-money"></i>
                                                    </span>
                                                    <select required class="form-control input-circle-right" ng-model="vm.job.Type">
                                                        <option value="">--Select One--</option>
                                                        <option value="Saving">Saving</option>
                                                        <option value="Current">Current</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Branch</label>
                                            <div class="col-md-4">
                                                <div class="input-group">
                                                    <span class="input-group-addon input-circle-left">
                                                        <i class="fa fa-building"></i>
                                                    </span>
                                                    <input required type="text" ng-model="vm.job.Branch" class="form-control input-circle-right" placeholder="Branch">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Currency Type</label>
                                            <div class="col-md-4">
                                                <div class="input-group">
                                                    <span class="input-group-addon input-circle-left">
                                                        <i class="fa fa-money"></i>
                                                    </span>
                                                    <select required class="form-control input-circle-right" ng-model="vm.job.CurrencyID"
                                                            ng-options="opt.id as opt.name for opt in currencyList">
                                                        <option value="">--Select One--</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-actions">
                                        <div class="row">
                                            <div class="col-md-offset-3 col-md-9">
                                                <button ng-disabled="vm.saving" type="reset" class="btn btn-default">@L("Cancel")</button>
                                                <button type="button" button-busy="vm.saving" busy-text="@L(" SavingWithThreeDot")" class="btn btn-primary blue" ng-click="vm.save()" ng-disabled="addvendorform.$invalid"><i class="fa fa-save"></i> <span>@L("Save")</span></button>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- END FORM-->
                                </div>
                            </div>
                        </div>
                        <!-- END SAMPLE FORM PORTLET-->
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

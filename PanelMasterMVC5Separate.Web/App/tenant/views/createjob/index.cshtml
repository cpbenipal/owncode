<div class="portlet light bordered" id="form_wizard_1">
    <div class="portlet-title">
        <div class="caption">
            <i class=" icon-layers font-red"></i>
            <span class="caption-subject font-red bold uppercase">
                Client,Vehicle,Repair & Insurer Details -
                <span class="step-title"> Step 1 of 4 </span>
            </span>
        </div>
    </div>
    <div class="portlet-body form">
        <form ng-controller="tenant.views.createjob.index as vm" class="form-horizontal" action="#" id="submit_form" method="POST">
            <div class="form-wizard">
                <div class="form-body">
                    <ul class="nav nav-pills nav-justified steps">
                        <li>
                            <a href="#tab1" data-toggle="tab" class="step">
                                <span class="number"> 1 </span>
                                <span class="desc">
                                    <i class="fa fa-check"></i> Client Details
                                </span>
                            </a>
                        </li>
                        <li>
                            <a href="#tab2" data-toggle="tab" class="step">
                                <span class="number"> 2 </span>
                                <span class="desc">
                                    <i class="fa fa-check"></i> Vehicle Details
                                </span>
                            </a>
                        </li>
                        <li>
                            <a href="#tab3" data-toggle="tab" class="step active">
                                <span class="number"> 3 </span>
                                <span class="desc">
                                    <i class="fa fa-check"></i> Repair Details
                                </span>
                            </a>
                        </li>
                        <li>
                            <a href="#tab4" data-toggle="tab" class="step">
                                <span class="number"> 4 </span>
                                <span class="desc">
                                    <i class="fa fa-check"></i> Insurer Quote Details
                                </span>
                            </a>
                        </li>                        
                    </ul>
                    <div id="bar" class="progress progress-striped" role="progressbar">
                        <div class="progress-bar progress-bar-success"> </div>
                    </div>
                    <div class="tab-content">
                        <div class="alert alert-danger display-none">
                            <button class="close" data-dismiss="alert"></button> You have some form errors. Please check below.
                        </div>
                        <div class="alert alert-success display-none">
                            <button class="close" data-dismiss="alert"></button> Your form validation is successful!
                        </div>
                        <div class="tab-pane active" id="tab1">
                            <h3 class="block">
                                Provide Client Details
                                <button type="button" ng-click="vm.importClient()" class="btn btn-success btn-sm mt-ladda-btn ladda-button btn-circle" data-style="expand-right" data-size="s">
                                    <span class="ladda-label">Import</span>
                                </button>

                            </h3>
                            <div class="form-group">
                                <label class="control-label col-md-3">
                                    Search
                                    <span class="required"> * </span>
                                </label>
                                <div class="col-md-4">
                                    <input ng-model="vm.filter.filterText" type="text" class="form-control" placeholder="@L("SearchWithThreeDot")" name="filterText" />

                                </div>
                            </div>
                           
                            <div class="form-group">
                                <label class="control-label col-md-3">
                                    Title
                                    <span class="required"> * </span>
                                </label>
                                <div class="col-md-4">
                                    <select required class="form-control" name="title" ng-model="vm.client.title"
                                            ng-options="opt.id as opt.name for opt in titleList">
                                        <option value="">@L("SelectOne")</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3">
                                    First Name
                                    <span class="required"> * </span>
                                </label>
                                <div class="col-md-4">
                                    <input ng-model="vm.client.name" type="text" class="form-control" name="firstname" />
                                    <span class="help-block"> Provide your firstname </span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">
                                    Surname
                                    <span class="required"> * </span>
                                </label>
                                <div class="col-md-4">
                                    <input ng-model="vm.client.surname" type="text" class="form-control" name="surname" />
                                    <span class="help-block"> Provide your surname </span>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3">
                                    Tel/Cell
                                    <span class="required"> * </span>
                                </label>
                                <div class="col-md-4">
                                    <input ng-model="vm.client.tel" type="text" class="form-control" name="phone" />
                                    <span class="help-block"> Provide your phone number </span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">
                                    Email
                                    <span class="required"> * </span>
                                </label>
                                <div class="col-md-4">
                                    <input ng-model="vm.client.email" type="text" class="form-control" name="email" />
                                    <span class="help-block"> Provide your email address </span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">
                                    Id Number
                                    <span class="required"> * </span>
                                </label>
                                <div class="col-md-4">
                                    <input ng-model="vm.client.idNumber" type="text" class="form-control" name="idnumber" />
                                    <span class="help-block"> Provide your Id Number </span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">
                                    How would you like to be communicated
                                    <span class="required"> * </span>
                                </label>
                                <div class="col-md-4">
                                    <select required class="form-control" name="communicationType" ng-model="vm.client.communicationType"
                                            ng-options="opt.id as opt.name for opt in communicationTypeList">
                                        <option value="">@L("SelectOne")</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">
                                    Once your repair is completed, do you give us permission to send you electronic communication on additional services we offer?
                                </label>
                                <div class="col-md-4">
                                    <select required class="form-control" name="contactAfterService" ng-model="vm.client.contactAfterService"
                                            ng-options="opt.id as opt.name for opt in contactAfterServiceList">
                                        <option value="">@L("SelectOne")</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">
                                    Other Information
                                </label>
                                <div class="col-md-4">
                                    <textarea class="form-control" rows="3" ng-model="vm.client.clientOtherInformation" name="clientOtherInformation"></textarea>
                                    <span class="help-block"> </span>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane" id="tab2">
                            <h3 class="block">
                                Provide vehicle details
                                <button type="button" ng-click="vm.importClient()" class="btn btn-success btn-sm mt-ladda-btn ladda-button btn-circle" data-style="expand-right" data-size="s">
                                    <span class="ladda-label">Import</span>
                                </button>
                            </h3>
                            <div class="form-group">
                                <label class="control-label col-md-3">
                                    Search
                                    <span class="required"> * </span>
                                </label>
                                <div class="col-md-4">
                                    <input ng-model="vm.filter.filterText1" type="text" class="form-control" placeholder="@L("SearchWithThreeDot")" name="filterText1" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">
                                    Make
                                    <span class="required"> * </span>
                                </label>
                                <div class="col-md-4">
                                    <select ng-model="$parent.MakeId" ng-options="source.name for source in manufactureList" data-ng-change="getModels($parent.MakeId)" id="MakeID" name="MakeID" class="form-control" required>
                                        <option value="">@L("SelectOne")</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">
                                    Model
                                    <span class="required"> * </span>
                                </label>
                                <div class="col-md-4">
                                    <select ng-model="$parent.ModelID" ng-options="item.name for item in modelList" name="ModelID" id="ModelID" class="form-control" required>
                                        <option value="">@L("SelectOne")</option>
                                    </select>
                                </div>
                            </div>


                            <div class="form-group">
                                <label class="control-label col-md-3">
                                    Paint Type
                                    <span class="required"> * </span>
                                </label>
                                <div class="col-md-4">
                                    <select ng-model="$parent.PaintTypeId" ng-options="item.name for item in paintList" name="PaintTypeId" id="PaintTypeId" class="form-control">
                                        <option value="">@L("SelectOne")</option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3">
                                    Colour
                                    <span class="required"> * </span>
                                </label>
                                <div class="col-md-4">
                                    <input ng-model="vm.client.colour" type="color" class="form-control" id="Colour" />
                                    <span class="help-block"> Provide colour of the car </span>
                                </div>
                            </div>


                            <div class="form-group">
                                <label class="control-label col-md-3">
                                    Year
                                    <span class="required"> * </span>
                                </label>
                                <div class="col-md-4">
                                    <input ng-model="vm.client.year" type="text" class="form-control" name="year" />
                                    <span class="help-block"> Provide year of the car </span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">
                                    Registration No
                                    <span class="required"> * </span>
                                </label>
                                <div class="col-md-4">
                                    <input ng-model="vm.client.registrationNumber" type="text" class="form-control" name="regno" />
                                    <span class="help-block"> Provide reg.no of the car </span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">
                                    Vin Number
                                    <span class="required"> * </span>
                                </label>
                                <div class="col-md-4">
                                    <input ng-model="vm.client.vinNumber" type="text" class="form-control" name="VinNumber" />
                                    <span class="help-block"> Provide Vin no. of the car </span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">
                                    Is your vehicle still under warranty?
                                    <span class="required"> * </span>
                                </label>
                                <div class="col-md-4">                                    
                                    <select required class="form-control" id="underWaranty" name="UnderWaranty" ng-model="vm.client.UnderWaranty"
                                            ng-options="opt.id as opt.name for opt in contactAfterServiceList">
                                        <option value="">@L("SelectOne")</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">
                                    Other Information
                                </label>
                                <div class="col-md-4">
                                    <textarea ng-model="vm.client.VehicleOtherInformation" class="form-control" rows="3"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane" id="tab3">
                            <h3 class="block">Provide vehicle repair/accident details</h3>                            
                            <div class="form-group">
                                <label class="control-label col-md-3">
                                    Describe briefly how the vehicle was damaged
                                </label>
                                <div class="col-md-4">
                                    <textarea ng-model="vm.client.damangeReason" class="form-control" rows="3" name="DamangeReason" id="DamangeReason"></textarea>
                                    <span class="help-block"> </span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">
                                    Whilst your vehicle is with us for this particular repair, is there other damage (unrelated to this claim) that you would like us to repair?
                                    <span class="required"> * </span>
                                </label>
                                <div class="col-md-4"> 
                                    <select required class="form-control"  id="IsUnrelatedDamangeReason" name="isUnrelatedDamangeReason" ng-model="vm.client.isUnrelatedDamangeReason"
                                            ng-options="opt.id as opt.name for opt in contactAfterServiceList">
                                        <option value="">@L("SelectOne")</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">
                                    Branch entry method
                                    <span class="required"> * </span>
                                </label>
                                <div class="col-md-4">
                                    <select ng-model="vm.client.branchEntryMethod" name="BranchEntryMethod" id="BranchEntryMethod" class="form-control">
                                        <option value="">@L("SelectOne")</option>
                                        <option value="D">Drivable</option>
                                        <option value="T">Non Drivable</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">
                                    Current Km's/Miles on Vehicle
                                    <span class="required"> * </span>
                                </label>
                                <div class="col-md-4">
                                    <input ng-model="vm.client.currentKMs" type="text" class="form-control"  name="CurrentKMs" id="CurrentKMs" />
                                    <span class="help-block"> Provide Current KMs of the car </span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">
                                    Other Information
                                </label>
                                <div class="col-md-4">
                                    <textarea ng-model="vm.client.RepairOtherInformation" class="form-control" rows="3"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane" id="tab4">
                            <h3 class="block">Quotation Details</h3>

                            <div class="form-group">
                                <label class="control-label col-md-3">
                                    Insurance Company
                                    <span class="required"> * </span>
                                </label>
                                <div class="col-md-4">
                                    <select ng-model="$parent.InsurerId" ng-options="insurance.name for insurance in InsuranceList" name="InsurerId" id="InsurerId" class="form-control">
                                        <option value="">@L("SelectOne")</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">
                                    Broker
                                    <span class="required"> * </span>
                                </label>
                                <div class="col-md-4">
                                    <select ng-model="$parent.BrokerId" name="BrokerID" id="BrokerID" ng-options="broker.name for broker in BrokerList" class="form-control">
                                        <option value="">@L("SelectOne")</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">
                                    Claim Administrator
                                    <span class="required"> * </span>
                                </label>
                                <div class="col-md-4">
                                    <input type="text" ng-model="vm.client.claimAdministrator" class="form-control" name="ClaimAdministrator" />
                                    <span class="help-block"> Provide Claim Administrator</span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">
                                    Policy Number
                                    <span class="required"> * </span>
                                </label>
                                <div class="col-md-4">
                                    <input type="text" ng-model="vm.client.policyNumber" class="form-control" name="insurance_policy_number" />
                                    <span class="help-block"> Provide Policy Number</span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">
                                    Claim Number
                                    <span class="required"> * </span>
                                </label>
                                <div class="col-md-4">
                                    <input type="text" ng-model="vm.client.claimNumber" class="form-control" name="insurance_claim_number" />
                                    <span class="help-block"> Provide Claim Number</span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3">
                                    Other Information
                                    <span class="required"> * </span>
                                </label>
                                <div class="col-md-4">
                                    <textarea ng-model="vm.client.insurerOtherInformation" class="form-control" rows="3" name="otherInformation"></textarea>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-offset-3 col-md-9">
                            <a href="javascript:;" class="btn default button-previous">
                                <i class="fa fa-angle-left"></i> Back
                            </a>
                            <a href="javascript:;" class="btn btn-outline green button-next">
                                Continue
                                <i class="fa fa-angle-right"></i>
                            </a>
                            <a href="javascript:;" class="btn green button-submit">
                                Submit
                                <i class="fa fa-check"></i>
                            </a>
                        </div>
                    </div>+
                </div>
            </div>
        </form>
    </div>

    <script src="~/assets/global/plugins/select2/js/select2.full.min.js" type="text/javascript"></script>
    <script src="~/assets/global/plugins/jquery-validation/js/jquery.validate.min.js" type="text/javascript"></script>
    <script src="~/assets/global/plugins/jquery-validation/js/additional-methods.min.js" type="text/javascript"></script>
    <script src="~/assets/global/plugins/bootstrap-wizard/jquery.bootstrap.wizard.min.js" type="text/javascript"></script>

    <script src="~/assets/pages/scripts/createjob-form-wizard.js" type="text/javascript"></script>

    <script src="~/assets/layouts/layout/scripts/layout.min.js" type="text/javascript"></script>
    <script src="~/assets/layouts/layout/scripts/demo.min.js" type="text/javascript"></script>
    <script src="~/assets/layouts/global/scripts/quick-sidebar.min.js" type="text/javascript"></script>
    <script src="~/assets/layouts/global/scripts/quick-nav.min.js" type="text/javascript"></script>
</div> 
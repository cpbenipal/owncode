 @using PanelMasterMVC5Separate.Tenants.Brokers
<div class="row margin-bottom-5">
    <div class="col-xs-6">
        <div class="page-head">
            <div class="page-title">
                <h1>
                    <span> @L("AddSubMasterBroker")</span> <small>more info about Broker</small>
                </h1>
            </div>
        </div>
    </div>
    <form name="addBrokersubform" ng-controller="tenant.views.AddBrokerSub.index as vm" role="form" novalidate class="form-horizontal" action="#" id="submit_form" method="POST">

        <div class="row">
            <div class="col-md-12">
                <!-- BEGIN SAMPLE FORM PORTLET-->
                <div class="portlet light bordered">

                    <div class="tabbable-line boxless tabbable-reversed">
                        <div class="tab-content">

                            <div class="portlet box green">
                                <div class="portlet-title">
                                    <div class="caption">
                                        <i class="fa fa-gift"></i>Fill Broker sub master detail
                                    </div>
                                    <div class="tools">
                                        <a href="javascript:;" class="collapse"> </a>
                                        <a href="#portlet-config" data-toggle="modal" class="config"> </a>
                                        <a href="javascript:;" class="reload"> </a>
                                        <a href="javascript:;" class="remove"> </a>
                                    </div>
                                </div>
                                <div class="portlet-body form">
                                    <!-- BEGIN FORM-->

                                    <div class="form-body">
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Broker Name</label>
                                            <div class="col-md-4">
                                                <div class="input-group">
                                                    <span class="input-group-addon input-circle-left">
                                                        <i class="fa fa-copy"></i>
                                                    </span>
                                                    <input type="text" readonly ng-model="vm.client.brokerName" ng-class="{'edited':vm.client.brokerName}" class="form-control input-circle-right" placeholder="Broker Name">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Logo</label>
                                            <div class="col-md-4">
                                                <div class="input-group">
                                                    <img ng-if="vm.client.id" ng-src="@Url.Action("GetProfilePictureById","Broker")?id={{vm.client.id}}" class="img-thumbnail" />
                                                    <img ng-if="!vm.client.id" src="@Url.Content("~/Common/Images/default-profile-picture.png")" class="img-thumbnail img-rounded user-edit-dialog-profile-image" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Broker Mask</label>
                                            <div class="col-md-4">
                                                <div class="input-group">
                                                    <span class="input-group-addon input-circle-left">
                                                        <i class="fa fa-copy"></i>
                                                    </span>
                                                    <input type="text" readonly ng-model="vm.client.mask"  ng-class="{'edited':vm.client.mask}" class="form-control input-circle-right" placeholder="Broker Mask">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Speedbump Email</label>
                                            <div class="col-md-4">
                                                <div class="input-group">
                                                    <span class="input-group-addon input-circle-left">
                                                        <i class="fa fa-pencil"></i>
                                                    </span>
                                                    <input type="email" ng-model="vm.job.SpeedbumpEmail" class="form-control input-circle-right" placeholder="Speedbump Email">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Quote Email</label>
                                            <div class="col-md-4">
                                                <div class="input-group">
                                                    <span class="input-group-addon input-circle-left">
                                                        <i class="fa fa-pencil"></i>
                                                    </span>
                                                    <input type="email" ng-model="vm.job.QuoteCentreEmail" class="form-control input-circle-right" placeholder="Quote Email">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Mask</label>
                                            <div class="col-md-4">
                                                <div class="input-group">
                                                    <span class="input-group-addon input-circle-left">
                                                        <i class="fa fa-pencil"></i>
                                                    </span>
                                                    <input type="text" ng-model="vm.job.Mask" class="form-control input-circle-right" placeholder="Mask Description">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Early Settlement Discount %</label>
                                            <div class="col-md-4">
                                                <div class="input-group">
                                                    <span class="input-group-addon input-circle-left">
                                                        <i class="fa fa-pencil"></i>
                                                    </span>
                                                    <input type="text" ng-model="vm.job.EarlySettleDisc" class="form-control input-circle-right" placeholder="Early Settlement Discount %">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Contact Name</label>
                                            <div class="col-md-4">
                                                <div class="input-group">
                                                    <span class="input-group-addon input-circle-left">
                                                        <i class="fa fa-pencil"></i>
                                                    </span>
                                                    <input type="text" ng-model="vm.job.ContactName" class="form-control input-circle-right" placeholder="Contact Name">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Contact Phone</label>
                                            <div class="col-md-4">
                                                <div class="input-group">
                                                    <span class="input-group-addon input-circle-left">
                                                        <i class="fa fa-phone"></i>
                                                    </span>
                                                    <input type="text" ng-model="vm.job.ContactPhone" placeholder="Contact Phone" class="form-control input-circle-right">

                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Contact Fax</label>
                                            <div class="col-md-4">
                                                <div class="input-group">
                                                    <span class="input-group-addon input-circle-left">
                                                        <i class="fa fa-fax"></i>
                                                    </span>
                                                    <input type="text" ng-model="vm.job.ContactFax" class="form-control input-circle-right" placeholder="Contact Fax">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Contact Email</label>
                                            <div class="col-md-4">
                                                <div class="input-group">
                                                    <span class="input-group-addon input-circle-left">
                                                        <i class="fa fa-envelope"></i>
                                                    </span>
                                                    <input type="email" ng-model="vm.job.ContactEmail" class="form-control input-circle-right" placeholder="Contact Email">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Address 1</label>
                                            <div class="col-md-4">
                                                <div class="input-group">
                                                    <span class="input-group-addon input-circle-left">
                                                        <i class="fa fa-address"></i>
                                                    </span>
                                                    <textarea ng-model="vm.job.Address1" class="form-control input-circle-right" rows="3"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Address 2</label>
                                            <div class="col-md-4">
                                                <div class="input-group">
                                                    <span class="input-group-addon input-circle-left">
                                                        <i class="fa fa-address"></i>
                                                    </span>
                                                    <textarea ng-model="vm.job.Address2" class="form-control input-circle-right" rows="3"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Address 3</label>
                                            <div class="col-md-4">
                                                <div class="input-group">
                                                    <span class="input-group-addon input-circle-left">
                                                        <i class="fa fa-address"></i>
                                                    </span>
                                                    <textarea ng-model="vm.job.Address3" class="form-control input-circle-right" rows="3"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Location</label>
                                            <div class="col-md-4">
                                                <div class="input-group">
                                                    <span class="input-group-addon input-circle-left">
                                                        <i class="fa fa-location-arrow"></i>
                                                    </span>
                                                    <input type="text" ng-model="vm.job.Location" class="form-control input-circle-right" placeholder="Location">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Registration Number</label>
                                            <div class="col-md-4">
                                                <div class="input-group">
                                                    <span class="input-group-addon input-circle-left">
                                                        <i class="fa fa-registered"></i>
                                                    </span>
                                                    <input type="text" ng-model="vm.job.RegistrationNumber" class="form-control input-circle-right" placeholder="Registration">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Tax Registration Number</label>
                                            <div class="col-md-4">
                                                <div class="input-group">
                                                    <span class="input-group-addon input-circle-left">
                                                        <i class="fa fa-registered"></i>
                                                    </span>
                                                    <input type="text" ng-model="vm.job.TaxRegistrationNumber" class="form-control input-circle-right" placeholder="Tax Registration">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Broker Account</label>
                                            <div class="col-md-4">
                                                <div class="input-group">
                                                    <span class="input-group-addon input-circle-left">
                                                        <i class="fa fa-bank"></i>
                                                    </span>
                                                    <input type="text" ng-model="vm.job.BrokerAccount" class="form-control input-circle-right" placeholder="Broker Account">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Payment Terms</label>
                                            <div class="col-md-4">
                                                <div class="input-group">
                                                    <span class="input-group-addon input-circle-left">
                                                        <i class="fa fa-copy"></i>
                                                    </span>
                                                    <select class="form-control input-circle-right" ng-model="vm.job.PaymentTerms"
                                                            ng-options="opt.id as opt.name for opt in SimpleData">
                                                        <option value="">--Select One--</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Bank</label>
                                            <div class="col-md-4">
                                                <div class="input-group">
                                                    <span class="input-group-addon input-circle-left">
                                                        <i class="fa fa-bank"></i>
                                                    </span>
                                                    <select required class="form-control input-circle-right" ng-model="vm.job.BankID"
                                                            ng-options="opt.id as opt.name for opt in bankList">
                                                        <option value="">--Select One--</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Account No.</label>
                                            <div class="col-md-4">
                                                <div class="input-group">
                                                    <span class="input-group-addon input-circle-left">
                                                        <i class="fa fa-bank"></i>
                                                    </span>
                                                    <input type="text" ng-model="vm.job.AccountNumber" class="form-control input-circle-right" placeholder="Account Number">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Type</label>
                                            <div class="col-md-4">
                                                <div class="input-group">
                                                    <span class="input-group-addon input-circle-left">
                                                        <i class="fa fa-money"></i>
                                                    </span>
                                                    <select required class="form-control" ng-model="vm.job.Type">
                                                        <option value="">--Select One--</option>
                                                        <option value="Saving">Saving</option>
                                                        <option value="Current">Current</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Branch</label>
                                            <div class="col-md-4">
                                                <div class="input-group">
                                                    <span class="input-group-addon input-circle-left">
                                                        <i class="fa fa-building"></i>
                                                    </span>
                                                    <input type="text" ng-model="vm.job.Branch" class="form-control input-circle-right" placeholder="Branch">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Currency Type</label>
                                            <div class="col-md-4">
                                                <div class="input-group">
                                                    <span class="input-group-addon input-circle-left">
                                                        <i class="fa fa-money"></i>
                                                    </span>
                                                    <select class="form-control input-circle-right" required ng-model="vm.job.CurrencyID"
                                                            ng-options="opt.id as opt.name for opt in currencyList">
                                                        <option value="">--Select One--</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Comments</label>
                                            <div class="col-md-4">
                                                <div class="input-group">
                                                    <span class="input-group-addon input-circle-left">
                                                        <i class="fa fa-copy"></i>
                                                    </span>
                                                    <textarea ng-model="vm.job.Comments" class="form-control input-circle-right" rows="3"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                       
                                    </div>
                                    <div class="form-actions">
                                        <div class="row">
                                            <div class="col-md-offset-3 col-md-9">
                                                <button ng-disabled="vm.saving" type="reset" class="btn btn-default">@L("Cancel")</button>
                                                <button type="button" button-busy="vm.saving" busy-text="@L("SavingWithThreeDot")" class="btn btn-primary blue" ng-click="vm.save()" ng-disabled="addBrokersubform.$invalid"><i class="fa fa-save"></i> <span>@L("Save")</span></button>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- END FORM-->
                                </div>
                            </div>
                        </div>
                        <!-- END SAMPLE FORM PORTLET-->

                    </div>

                </div>
            </div>
        </div>

    </form>
</div>